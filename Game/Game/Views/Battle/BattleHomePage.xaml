<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.BattleHomePage"
             BackgroundImageSource="page_background.png">

    <ContentPage.Content>
        <StackLayout Style="{StaticResource VerticalStack}"
                     HorizontalOptions="CenterAndExpand"
                     Padding="40">
            <Label Text="Battle Home Page"
               Style="{StaticResource CenterMessageStyle}"/>

            <Label Text="Navigate to 'New Round' and 'Battle' pages through the 'Pick Characters' page"
                   Style="{StaticResource LabelStyle}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   LineBreakMode="WordWrap"/>

            <Button Text="AutoBattle"
                    Clicked="AutoBattle_Clicked"/>

            <Button Text="Pick characters"
                    Clicked="PickCharacters_Clicked"/>

            <Button Text="Pick Items"
                    Clicked="PickItems_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
