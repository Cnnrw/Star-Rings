<?xml version="1.0" encoding="utf-8"?>

<page:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:page="clr-namespace:Game.Views;assembly=Game"
                      x:Class="Game.Views.BattleHomePage"
                      PageBackground="page_background_1.png">

    <ContentPage.Resources>
        <Style TargetType="StackLayout">
            <Setter Property="Margin" Value="15" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="VerticalOptions" Value="FillAndExpand" />
            <Setter Property="Padding" Value="10" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="3*, 2*"
          HorizontalOptions="FillAndExpand">

        <StackLayout>
            <Label Text="Battle Home Page"
                   HorizontalTextAlignment="Center"
                   Style="{StaticResource TextTitle}" />

            <Label Text="Navigate to 'New Round' and 'Battle' pages through the 'Pick Characters' page"
                   HorizontalTextAlignment="Center"
                   LineBreakMode="WordWrap"
                   Style="{StaticResource TextSubTitle}"
                   HorizontalOptions="Center" />
        </StackLayout>

        <StackLayout Grid.Row="1">
            <Button Text="Pick characters" Clicked="PickCharacters_Clicked" />
            <Button Text="Pick Items" Clicked="PickItems_Clicked" />
            <Button Text="Score Page" Clicked="ScorePage_Clicked" />
        </StackLayout>

    </Grid>
</page:BaseContentPage>
