<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Templates.Pages.ModalPage">
    <ContentPage.ControlTemplate>
        <ControlTemplate>
            <Grid>
                <Image Source="{TemplateBinding pageBackground}"
                       Opacity=".8"
                       Aspect="Fill"/>

                    <Grid ColumnDefinitions="*, 3*"
                          RowDefinitions="*, 9*">

                        <ImageButton HeightRequest="40"
                                     WidthRequest="40"
                                     Margin="0, 35, 0, 0"
                                     Source="close_button.png"
                                     Clicked="CloseButton_OnClick" />

                        <ContentPresenter Grid.ColumnSpan="2"
                                          Grid.Row="1" />
                    </Grid>
                </Grid>
        </ControlTemplate>
    </ContentPage.ControlTemplate>
</ContentPage>
