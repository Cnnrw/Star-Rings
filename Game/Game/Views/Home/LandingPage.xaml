<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.LandingPage">

    <StackLayout>
        <Image Source="magic_tree.gif"
               IsAnimationPlaying="True"/>

        <Label Text="A long time ago in a galaxy far, far away...."
               Style="{StaticResource CenterMessageLargeStyle}"
               HorizontalOptions="Center"
               Margin="0, 30, 0, 10"
               LineBreakMode="WordWrap"/>

        <Label Text="The Millenium Falcon has been sucked into a wormhole and teleported to Middle Earth! Help the Rebel crew battle their way across the land in search of a magical portal to take them home!"
               Style="{StaticResource CenterMessageStyle}"
               HorizontalOptions="Center"
               Margin="50, 0, 50, 0"
               LineBreakMode="WordWrap"/>

        <ImageButton x:Name="StartButton"
                     Source="start_button_normal.png"
                     Pressed="StartButton_OnPressed"
                     Released="StartButton_OnReleased"/>
    </StackLayout>
    
</ContentPage>